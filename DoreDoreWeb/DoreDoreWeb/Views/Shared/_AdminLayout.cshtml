<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin Panel</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            background-color: #f8f9fa;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        /* Navbar Styles */
        .navbar {
            background-color: #343a40;
        }

            .navbar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 15px;
                border-right: 1px solid #444;
            }

                .navbar a:hover {
                    background-color: #17a2b8;
                }

        /* Sayfa İçeriği */
        .content {
            padding: 20px;
        }

        /* Sayfa içerik kısmı */
        .content {
            padding: 30px;
            background-color: #ffffff;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <!-- Navbar (Yatay Menu) -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Users", "Admin")">Admin Paneli</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar" aria-controls="adminNavbar" aria-expanded="false" aria-label="Menüyü Aç/Kapat">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="adminNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Users", "Admin")">Kullanıcılar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Films", "Admin")">Filmler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Categories", "Admin")">Kategoriler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Comments", "Admin")">Yorumlar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="@Url.Action("Logout", "Login")">Çıkış Yap</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Content Area -->
    <div class="content">
        @RenderBody()
    </div>

</body>
</html>
@RenderSection("Scripts", required: false)
