@model List<DoreDoreWeb.Models.User>

@{
    ViewData["Title"] = "Kullanıcı Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["ShowNavbar"] = false;
}

<h2>Kullanıcı Listesi</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ad</th>
            <th>Email</th>
            <th>Admin mi?</th>
            <th>Doğum Tarihi</th>
            <th>Cinsiyet</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.UserEposta</td>
                <td>@(user.UserLv == true ? "Evet" : "Hayır")</td>
                <td>@user.BirthDate?.ToString("dd/MM/yyyy")</td>
                <td>@(user.Gender == true ? "Erkek" : "Kadın")</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="@Url.Action("EditUser", "Admin", new { id = user.Id })">Düzenle</a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("DeleteUser", "Admin", new { id = user.Id })" onclick="return confirm('Bu kullanıcıyı silmek istediğine emin misin?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<style>
    /* Genel Stil Ayarları */
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa; /* Arka plan rengini daha açık yapalım */
    }

    /* Başlık */
    h2 {
        font-size: 24px;
        margin-bottom: 20px;
        color: #333;
    }

    /* Tablo Stil Ayarları */
    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 30px;
        background-color: white;
        border-radius: 8px; /* Köşe yuvarlatma */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Hafif gölge ekleyelim */
    }

        /* Tablo Başlıkları */
        .table thead {
            background-color: #007bff;
            color: white;
        }

        .table th {
            padding: 12px;
            text-align: left;
            font-weight: bold;
        }

        /* Tablo Satırları */
        .table tbody tr {
            border-bottom: 1px solid #ddd;
        }

            /* Tablo Satır Hover Efekti */
            .table tbody tr:hover {
                background-color: #f1f1f1; /* Satır hover ile daha belirgin olsun */
            }

        /* Tablo Hücreleri */
        .table td {
            padding: 10px;
            text-align: left;
            vertical-align: middle;
        }

    /* İşlem Butonları */
    .btn {
        text-decoration: none;
        border-radius: 5px;
        padding: 5px 15px;
        font-size: 14px;
    }

    /* Düzenle Butonu */
    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    /* Sil Butonu */
    .btn-danger {
        background-color: #dc3545;
        border: none;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    /* Tabloyu Sarmalayan Alan */
    .table-responsive {
        overflow-x: auto; /* Ekran küçülünce yatay kaydırma ekler */
    }
</style>