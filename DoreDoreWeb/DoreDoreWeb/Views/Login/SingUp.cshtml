@model DoreDoreWeb.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
}

<h2 class="text-center mb-4">Kayıt Ol</h2>

<div class="container">
<form asp-action="SingUp" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Kullanıcı Adı</label>
        <input asp-for="UserName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="UserEposta" class="form-control" />
    </div>

    <div class="form-group">
        <label>Şifre</label>
        <input asp-for="UserPassword" type="password" class="form-control" />
    </div>

    <div class="form-group">
        <label>Doğum Tarihi</label>
        <input asp-for="BirthDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>Cinsiyet</label>
        <select asp-for="Gender" class="form-control">
            <option value="true">Erkek</option>
            <option value="false">Kadın</option>
        </select>
    </div>

    <!-- Profil fotoğrafı ekleme alanı -->
    <div class="form-group">
        <label>Profil Fotoğrafı</label>
        <input type="file" name="ProfilePicture" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
</form>

</div>

<!-- Bootstrap CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
