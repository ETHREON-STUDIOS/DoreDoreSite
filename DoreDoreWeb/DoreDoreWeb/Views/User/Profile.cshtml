@model DoreDoreWeb.Models.User

@{
    ViewData["Title"] = "Profil";
}

<head>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #343a40;
            margin: 0;
            padding: 0;
            color: #f8f9fa;
        }

        h1 {
            font-size: 36px;
            color: #ffffff;
            font-weight: 600;
            text-align: center;
            margin-top: 50px;
        }

        .profile-container {
            background-color: #495057;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.3);
            max-width: 600px;
            margin: 50px auto;
        }

            .profile-container div {
                margin-bottom: 20px;
                font-size: 18px;
                color: #f8f9fa;
            }

            .profile-container strong {
                font-weight: bold;
                color: #007bff;
            }

            .profile-container img {
                border-radius: 50%;
                margin-top: 10px;
                border: 4px solid #ffffff;
            }

            .profile-container a {
                display: inline-block;
                margin-top: 20px;
                font-size: 18px;
                color: #007bff;
                text-decoration: none;
                padding: 10px 20px;
                border: 2px solid #007bff;
                border-radius: 5px;
                transition: all 0.3s ease;
            }

                .profile-container a:hover {
                    background-color: #007bff;
                    color: white;
                }

        /* Profile photo at the top */
        .profile-photo {
            text-align: center;
        }

        /* Style for the profile information */
        .profile-info {
            margin-top: 20px;
        }
    </style>
</head>

<body>
    <h1>Profiliniz</h1>

    <div class="profile-container">
        <div class="profile-photo">
            <strong>Profil Fotoğrafı:</strong><br />
            @if (!string.IsNullOrEmpty(Model.ProfilePicture))
            {
                <img src="@Model.ProfilePicture" alt="Profil Fotoğrafı" width="120" height="120" />
            }
            else
            {
                <p>Profil fotoğrafı eklenmemiş.</p>
            }
        </div>

        <div class="profile-info">
            <div>
                <strong>Kullanıcı Adı:</strong> @Model.UserName
            </div>
            <div>
                <strong>E-Posta:</strong> @Model.UserEposta
            </div>
            <div>
                <strong>Doğum Tarihi:</strong> @Model.BirthDate?.ToString("dd/MM/yyyy")
            </div>
            <div>
                <strong>Cinsiyet:</strong> @(Model.Gender == true ? "Erkek" : "Kadın")
            </div>
        </div>

        <div>
            <a href="@Url.Action("EditProfile")">Profilinizi Düzenle</a>
        </div>
    </div>
</body>
